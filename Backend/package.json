{
  "name": "hardware-store-inventory-backend",
  "version": "1.0.0",
  "description": "Backend API for Hardware Store Inventory Management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "node scripts/setupDatabase.js",
    "test": "jest",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "seed:all": "node scripts/seedUsers.js && node scripts/seedShops.js",
    "seed:categories": "node scripts/seedCategories.js",
    "seed:brands": "node scripts/seedBrands.js",
    "seed:products": "node scripts/seedProducts.js",
    "seed:complete": "npm run seed:all && npm run seed:categories && npm run seed:brands && npm run seed:products",
    "db:reset": "node scripts/resetDatabase.js",
    "backup": "node scripts/backupData.js",
    "restore": "node scripts/restoreData.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "node-cache": "^5.1.2",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.1",
    "twilio": "^4.15.0"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "inventory",
    "hardware-store",
    "api",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT"
}
